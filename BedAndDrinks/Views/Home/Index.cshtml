@{
    ViewData["Title"] = "Home Page";
}

<!-- Encabezado -->
<header class="bg-primary text-white text-center py-3 shadow">
    <h1 class="m-0">Bed&Drinks</h1>
</header>

<!-- Contenido principal -->
<main class="container d-flex flex-column align-items-center justify-content-center mt-4">

    <h2 class="mb-4 text-center">Encuentra tu hospedaje ideal</h2>

    <!-- Formulario dentro de un Card -->
    <div class="card p-4 shadow-lg" style="max-width: 600px; width: 100%;">
        <form asp-action="Buscar" method="post">
            <div class="mb-3">
                <label for="CheckIn" class="form-label">Check-in</label>
                <input type="date" id="CheckIn" name="CheckIn" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="CheckOut" class="form-label">Check-out</label>
                <input type="date" id="CheckOut" name="CheckOut" class="form-control" required />
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label for="Adultos" class="form-label">Adultos</label>
                    <input type="number" id="Adultos" name="Adultos" class="form-control" value="2" required />
                </div>
                <div class="col-md-4 mb-3">
                    <label for="Ninos" class="form-label">Niños</label>
                    <input type="number" id="Ninos" name="Ninos" class="form-control" value="0" required />
                </div>
                <div class="col-md-4 mb-3">
                    <label for="Habitaciones" class="form-label">Habitaciones</label>
                    <input type="number" id="Habitaciones" name="Habitaciones" class="form-control" value="1" required />
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100">Buscar</button>
        </form>
    </div>
</main>

<!-- Estilos adicionales -->
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
        padding-top: 80px;
    }

    .card {
        border-radius: 10px;
        background: white;
    }
</style>

