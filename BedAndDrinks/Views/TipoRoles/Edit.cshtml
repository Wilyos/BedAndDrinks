@model BedAndDrinks.Models.TipoRol

<h2>Editar Tipo de Rol</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdTipoRol" />

    <div class="form-group">
        <label asp-for="NombreTipoRol" class="control-label"></label>
        <input asp-for="NombreTipoRol" class="form-control" />
    </div>

    <div class="form-group">
        <label class="control-label">Seleccionar Permisos</label>
        <div>
            @foreach (var permiso in ViewBag.Permisos)
            {
                <div class="form-check">
                    <input type="checkbox" name="permisosSeleccionados" value="@permiso.Value"
                           class="form-check-input" @(permiso.Selected ? "checked" : "") />
                    <label class="form-check-label">@permiso.Text</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

