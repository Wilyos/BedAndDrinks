@model BedAndDrinks.Models.TipoRol

@{
    ViewData["Title"] = "Create";
    var permisos = ViewBag.Permisos as List<BedAndDrinks.Models.Permiso> ?? new List<BedAndDrinks.Models.Permiso>();
}

<h1>Create</h1>

<h4>TipoRol</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreTipoRol" class="control-label"></label>
                <input asp-for="NombreTipoRol" class="form-control" />
                <span asp-validation-for="NombreTipoRol" class="text-danger"></span>
            </div>
            <h2>Seleccionar Permisos</h2>
            @if (permisos.Any())
            {
                foreach (var permiso in permisos)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="permiso-@permiso.IdPermiso"
                               name="seleccionadosPermisos" value="@permiso.IdPermiso" />
                        <label class="form-check-label" for="permiso-@permiso.IdPermiso">@permiso.NombrePermiso</label>
                    </div>
                }
            }
            else
            {
                <p>No hay permisos disponibles.</p>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
