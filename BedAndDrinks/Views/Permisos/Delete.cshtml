@model BedAndDrinks.Models.Permiso

@{
    ViewData["Title"] = "Eliminar Permiso";
}

<style>
    /* Ajustes generales */
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        padding-top: 80px; /* Evita que el contenido quede oculto por el navbar */
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        color: #333;
    }

    main {
        flex: 1;
        max-width: 600px;
        margin: 50px auto;
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h1 {
        color: #d9534f;
        margin-bottom: 10px;
    }

    h3 {
        color: #333;
        font-weight: normal;
    }

    dl {
        text-align: left;
        margin-top: 20px;
    }

    dt {
        font-weight: bold;
    }

    hr {
        margin: 20px 0;
        border: 0;
        border-top: 1px solid #ddd;
    }

    /* Botones */
    .btn-danger {
        background-color: #d9534f;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

    .back-link {
        display: inline-block;
        margin-top: 10px;
        text-decoration: none;
        color: #4CAF50;
        font-weight: bold;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    /* Footer */
    footer {
        text-align: center;
        padding: 10px;
        background-color: #333;
        color: white;
        margin-top: auto;
    }

        footer a {
            color: #4CAF50;
            text-decoration: none;
        }

            footer a:hover {
                text-decoration: underline;
            }
</style>

<main>
    <h1>Eliminar Permiso</h1>
    <h3>¿Estás seguro de que deseas eliminar este permiso?</h3>

    <div>
        <h4>Detalles del Permiso</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Nombre:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NombrePermiso)</dd>

            <dt class="col-sm-4">Descripción:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdPermiso" />
            <button type="submit" class="btn-danger">Eliminar</button>
            <a asp-action="Index" class="back-link">Cancelar</a>
        </form>
    </div>
</main>


