@model IEnumerable<BedAndDrinks.Models.Permiso>

@{
    ViewData["Title"] = "Permisos";
}

<style>
    /* Estructura principal */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
        color: #333;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        padding-top: 80px; /* Para evitar que el contenido quede debajo del navbar */
    }

    main {
        flex: 1;
        padding: 20px;
        max-width: 1000px;
        margin: 20px auto;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #4CAF50;
        margin-bottom: 20px;
        text-align: center;
    }

    /* Estilos de la tabla */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        border-radius: 8px;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #4CAF50;
            color: white;
            text-align: center;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

    /* Estilos de los botones y enlaces */
    .create-button {
        display: inline-block;
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 4px;
        margin-bottom: 20px;
        font-weight: bold;
    }

        .create-button:hover {
            background-color: #45a049;
        }

    .action-links a {
        margin-right: 10px;
        color: #4CAF50;
        text-decoration: none;
        font-weight: bold;
    }

        .action-links a:hover {
            text-decoration: underline;
        }

    /* Footer fijo al final */
    footer {
        text-align: center;
        padding: 10px;
        background-color: #333;
        color: white;
        margin-top: auto;
    }

        footer a {
            color: #4CAF50;
            text-decoration: none;
        }

            footer a:hover {
                text-decoration: underline;
            }
</style>

<main>
    <h1>Permisos</h1>

    <p>
        <a asp-action="Create" class="create-button">Crear Nuevo Permiso</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.NombrePermiso)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NombrePermiso)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td class="action-links">
                        <a asp-action="Edit" asp-route-id="@item.IdPermiso">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.IdPermiso">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdPermiso" style="color: red;">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>


