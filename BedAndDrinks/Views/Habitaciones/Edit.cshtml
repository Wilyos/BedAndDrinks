@model BedAndDrinks.Models.Habitacion

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Habitacion</h4>
<hr />

<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdHabitacion" />
            <div class="accept-policy">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="accept-policy">
                <label asp-for="IdHabitacionTh" class="control-label">Tipo de Habitación</label>
                <select asp-for="IdHabitacionTh" class="form-control" asp-items="ViewBag.IdHabitacionTh">
                    <option value="">-- Seleccione un Tipo de Habitación --</option>
                </select>
                <span asp-validation-for="IdHabitacionTh" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}