@model LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="row shadow-lg p-4 rounded" style="max-width: 900px; background: white;">

        <!-- Sección de Imagen -->
        <div class="col-md-6 d-none d-md-block">
            <img src="../Images"
                 alt="Hotel Booking Illustration"
                 class="img-fluid rounded">
        </div>

        <!-- Sección de Formulario -->
        <div class="col-md-6 p-4">
            <h2 class="text-center mb-4">Iniciar Sesión</h2>

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="CorreoUsuario" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="CorreoUsuario" class="form-control" placeholder="Correo electrónico" />
                    </div>
                    <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Contrasena" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="Contrasena" type="password" class="form-control" placeholder="Contraseña" />
                    </div>
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                </div>
            </form>

            <p class="mt-3 text-center">
                ¿No tienes una cuenta?
                <a asp-controller="Usuarios" asp-action="Create" class="text-primary fw-bold">Regístrate aquí</a>
            </p>
        </div>

    </div>
</div>
